<%= title h(@user.disp_name), :h2 %>

<% if current_user == @user %>
<% form_for @user do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :name, :focus => true %>
  <%= submit_tag 'save name' %>
<% end %>
<% end %>

<%= h(@user.identity_url) %>

<h3>from <%= h(@user.disp_name) -%></h3>
<%= render :partial => "patches/largelist",
   :locals =>
     { :patches => @patches,
       :nothing => '(nothing yet)',
       :post => true, :pagenum => :page
      } %>

<p>(newest first) <%= link_to 'rss', {:action => :feed, :id => @user.id}
-%>
</p>
