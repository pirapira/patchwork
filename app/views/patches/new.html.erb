<%= title "Create Patch", :h2 %>

<% if @prepatch %>

<%= render :partial => 'centralbox',
	   :locals  => { :patch => @prepatch } %>

<% end # prepatch %>

<% form_for @patch do |f| %>
	<%= f.error_messages %>
<%= link_to 'textile', 'http://textile.thresholdstate.com/', :popup => true %> <br />
	<%= text_area :patch, :content %>
	<div class="buttons">
	<%= submit_tag 'put', {:style => 'font-size: 200%'} %> under <a rel="license"
 href="http://creativecommons.org/licenses/by-sa/3.0/us/"
><img alt="Creative Commons License"
 style="border-width:0" src="/images/lic.png" /></a>.
	</div>
	<%= hidden_field(:prepatch, :id) if @prepatch %>
	<%= hidden_field(:postpatch, :id) if @postpatch %>
<% end %>

<% if @postpatch %>
<%= render :partial => 'centralbox',
	   :locals  => { :patch => @postpatch } %>
<% end # postpatch %>
