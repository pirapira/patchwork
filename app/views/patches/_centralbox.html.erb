<div class="centralbox"
 <%= if defined? float then 'style="float: left;"' end -%>
>
<%= patch.content -%>
<p class="sub">
<% if patch.parent then %>
  forked from <%= link_to h(patch.parent.summary), {:id => patch.parent_id},
  {:class => :sub} %>
<br />
<% end %>
  by <%= link_to h(patch.user.disp_name), user_path(patch.user), {:class =>
  :action_l} -%>
  at <%= h(patch.created_at) -%>.
  <%= link_to 'link', :controller => 'patches',
    :action => 'show', :id => patch.id %>
  <%= link_to 'rand', :controller => 'random',
    :action => 'show', :id => patch.id %>
</p>
</div>
